<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".Calculator">


     //Блок вывода результатов........................


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:gravity="end"
        tools:text="0"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        tools:text="0"/>





    //Блок кнопок...................................


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvClear"
                style="@style/ActionButtonStyle"
                android:text="CE"/>
            <TextView
                android:id="@+id/tvOpen"
                style="@style/ActionButtonStyle"
                android:text="("/>
            <TextView
                android:id="@+id/tvClose"
                style="@style/ActionButtonStyle"
                android:text=")"/>
            <TextView

                android:id="@+id/tvDev"
                style="@style/ActionButtonStyle"
                android:text="/"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv7"
                style="@style/NumberButtonStyle"
                android:text="7"/>
            <TextView
                android:id="@+id/tv8"
                style="@style/NumberButtonStyle"
                android:text="8"/>
            <TextView
                android:id="@+id/tv9"
                style="@style/NumberButtonStyle"
                android:text="9"/>
            <TextView
                android:id="@+id/tvMul"
                style="@style/ActionButtonStyle"
                android:text="*"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv4"
                style="@style/NumberButtonStyle"
                android:text="4"/>
            <TextView
                android:id="@+id/tv5"
                style="@style/NumberButtonStyle"
                android:text="5"/>
            <TextView
                android:id="@+id/tv6"
                style="@style/NumberButtonStyle"
                android:text="6"/>
            <TextView
                android:id="@+id/tvMin"
                style="@style/ActionButtonStyle"
                android:text="-"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv1"
                style="@style/NumberButtonStyle"
                android:text="1"/>
            <TextView
                android:id="@+id/tv2"
                style="@style/NumberButtonStyle"
                android:text="2"/>
            <TextView
                android:id="@+id/tv3"
                style="@style/NumberButtonStyle"
                android:text="3"/>
            <TextView
                android:id="@+id/tvPlus"
                style="@style/ActionButtonStyle"
                android:text="+"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDot"
                style="@style/NumberButtonStyle"
                android:text="."/>
            <TextView
                android:id="@+id/tv0"
                style="@style/NumberButtonStyle"
                android:text="0"/>
            <TextView
                android:id="@+id/tvBack"
                style="@style/NumberButtonStyle"
                android:text="Back"/>
            <TextView
                android:id="@+id/tvEqual"
                style="@style/ActionButtonStyle"
                android:text="="/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>